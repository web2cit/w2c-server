{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/app.js",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
                "${workspaceFolder}/node_modules/web2cit/dist/**/*.js"
            ],
            // to be removed if using npm w2c-core
            "runtimeArgs": ["--preserve-symlinks"]
        }
    ]
}